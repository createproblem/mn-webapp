{# /src/g5/MovieBundle/Resources/views/Label/index.html.twig #}
{% extends '::base.html.twig' %}
{% block body %}

{% include 'g5MovieBundle:helper:movieGrid.html.twig' with { "movies": movies, "imgUrl": imgUrl } %}

<div class="row">
    <div class="text-center">
        {{ paginationBar(pagination) }}
    </div>
</div>

{% endblock body %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@g5MovieBundle/Resources/public/js/label.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@g5MovieBundle/Resources/public/css/movie.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
